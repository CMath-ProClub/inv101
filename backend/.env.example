# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/investing101
# For Railway: mongodb://mongo:PASSWORD@containers-us-west-XXX.railway.app:PORT

# Node Environment
NODE_ENV=development

# Render Configuration (for production)
# RENDER_EXTERNAL_URL will be auto-set by Render
# Or manually set APP_URL for other hosting providers
# APP_URL=https://your-app.onrender.com

# Core cache tuning
ARTICLE_CACHE_MIN=750
ARTICLE_CACHE_RECENT_PERCENT=40
ARTICLE_CACHE_WEEK_PERCENT=75
ARTICLE_CACHE_REFRESH_MINUTES=60
ARTICLE_CACHE_CLEANUP_MINUTES=360
ARTICLE_CACHE_MOCK_PER_SOURCE=12
ARTICLE_CACHE_TIMEOUT_MS=10000

# NewsAPI.org
NEWSAPI_KEY=
NEWSAPI_QUERIES=stocks,market,finance,economy,investing
NEWSAPI_PAGE_SIZE=50
NEWSAPI_MAX_PAGES=1

# TheNewsAPI
THENEWSAPI_TOKEN=
THENEWSAPI_LOCALES=us,gb,ca,au
THENEWSAPI_CATEGORIES=business,technology,world
THENEWSAPI_LIMIT=50

# Currents API
CURRENTS_API_KEY=
CURRENTS_API_CATEGORIES=business,finance,technology,world

# The Guardian Open Platform
GUARDIAN_API_KEY=
GUARDIAN_SECTIONS=business,money,world,technology
GUARDIAN_PAGE_SIZE=50

# NewsData.io
NEWSDATA_API_KEY=
NEWSDATA_CATEGORIES=business,top
NEWSDATA_COUNTRIES=us,gb,ca,au

# New York Times Article Search
NYTIMES_API_KEY=
NYTIMES_QUERIES=markets,stocks,wall street,economy,finance
NYTIMES_SECTIONS=Business,Economic,Markets,DealBook,Energy,International Business
NYTIMES_LOOKBACK_DAYS=7
NYTIMES_MAX_PAGES=2

# JWT Secret for authentication (required in production)
JWT_SECRET=your-secure-jwt-secret-here

# Stock Cache Configuration
STOCK_CACHE_ENABLED=true
STOCK_CACHE_REFRESH_INTERVAL=6h
STOCK_CACHE_BATCH_SIZE=25
STOCK_CACHE_TIMEOUT=20000

# Intraday Stock Quote Persistence
STOCK_QUOTE_PERSIST=true
STOCK_QUOTE_BUCKET_MINUTES=5
STOCK_QUOTE_TTL_DAYS=395
STOCK_INTRADAY_TICKERS=SPY,QQQ,DIA,IWM,AAPL,MSFT,GOOGL,AMZN,NVDA,TSLA,META,AMD
STOCK_INTRADAY_BATCH_SIZE=12

# Historical Quote Backfill (lazy daily jobs)
STOCK_HISTORICAL_TICKERS=SPY,QQQ,DIA,IWM,AAPL,MSFT,GOOGL,AMZN,NVDA,TSLA,META,AMD
STOCK_HISTORICAL_LOOKBACK_DAYS=365
STOCK_HISTORICAL_INTERVAL=1d
STOCK_HISTORICAL_BUCKET_MINUTES=1440
STOCK_HISTORICAL_BATCH_DELAY_MS=1000
STOCK_HISTORICAL_AUTO_BACKFILL=true

# Scheduler logging
SCHEDULER_LOG_TTL_DAYS=90
